extends ../layout

block content
  div.row
    div.col-md-4
      input.challenge-title.form-control#title(type=text)
    div.col-md-6
      input.challenge-description.form-control#description(type=text)
    div.col-md-2
      button.btn.btn-status#create-challenge(style='float: right;') Create
  br
  div.row
    div.col-md-6
      div.panel.panel-info
        div.panel-heading Start
        ul.list-group#files-start
      button.btn.btn-default#add-start Add +
    div.col-md-6
      div.panel.panel-success
        div.panel-heading End
        ul.list-group#files-end
      button.btn.btn-default#add-end Add +
  hr
  div.row
    div.col-md-6
      div.panel.panel-info
        div.panel-heading File Contents
        textarea.file-contents#contents-start
    div.col-md-6
      div.panel.panel-success
        div.panel-heading File Contents
        textarea.file-contents#contents-end
  script(src='/javascripts/sg-challenge-create.js')
