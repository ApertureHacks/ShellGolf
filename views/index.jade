extends layout

block content
  div.row
    div.col-md-8
      div.panel.panel-primary
        div.panel-heading
          h1.panel-title Challenges
        ul.list-group
          each challenge in challenges
            li.list-group-item
              a(href='/challenge/' + challenge._id.toString())= challenge.title
    div.col-md-4
      div.row
        div.col-md-12
          div.panel.panel-default
            div.panel-heading Leaderboard
            if leaders
              - var tbl_row = 0
              table.table
                each leader in leaders
                  - tbl_row++
                  tr
                    td= tbl_row
                    td= leader.name
            else
              div.panel-body.
                Oops, looks like there aren't any leaders yet :(. You should
                go do a challenge and be the first one!
      div.row
        div.col-md-12
          include includes/twitter-widget.html
